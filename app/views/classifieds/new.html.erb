<h1>Add a classified</h1>
<%= form_for @classified do |f| %>
  <div>
    <%= label_tag :category %>
    <%= text_field_tag :category %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.number_field :price, :size => 5, :value => 0, :step => 0.01, :min => 0 %>
  </div>
  <br>
  <div>
    <%= f.submit %>
  </div>
<% end %>
